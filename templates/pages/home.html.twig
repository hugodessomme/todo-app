{% extends "base.html.twig" %}

{% block title "Vos t√¢ches" %}

{% block body %}

<div class="text-right">
    <a href="/task/new" class="btn btn-info">+ New task</a>
</div>

<div class="jumbotron mt-3">
    <h1 class="display-3">To Do App!</h1>
    <p class="lead">Simple PHP application to manage tasks</p>
</div>

<h2>Your tasks</h2>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col"><span class="sr-only">Index</span> #</th>
                    <th scope="col" width="70%">Task</th>
                    <th scope="col" width="30%">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ task.title }}</td>
                        <td>
                            <form action="/task/{{ task.id }}/delete" method="post">
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="/task/{{ task.id }}" class="btn btn-secondary">Read</a>
                                    <a href="/task/{{ task.id }}/edit" class="btn btn-secondary">Edit</a>
                                    <button type="submit" class="btn btn-secondary">Delete</button>
                                </div>
                            </form>
                        </td>
                    </tr>                        
                {% endfor %}
            </tbody>
        </table> 
    </div>
</div>
{% endblock %}